/* ===================================
   KAIRO STUDIO - CUSTOM STYLES
   Modern, Glassmorphic, Animated
   =================================== */

/* CSS Variables */
:root {
    /* Colors */
    --color-navy: #0A0E27;
    --color-dark-blue: #141B34;
    --color-midnight: #1A2037;
    --color-electric: #3B82F6;
    --color-bright-blue: #60A5FA;
    --color-sky: #93C5FD;
    --color-white: #FFFFFF;

    /* Typography */
    --font-heading: 'Space Grotesk', sans-serif;
    --font-body: 'Inter', sans-serif;

    /* Spacing */
    --space-unit: 8px;

    /* Easings */
    --ease-out-expo: cubic-bezier(0.16, 1, 0.3, 1);
    --ease-out-quart: cubic-bezier(0.25, 1, 0.5, 1);
    --ease-spring: cubic-bezier(0.34, 1.56, 0.64, 1);
}

/* Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    scroll-behavior: smooth;
    scroll-padding-top: 100px;
}

body {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    overflow-x: hidden;
}

/* Typography */
.hero-title {
    font-family: var(--font-heading);
    font-size: clamp(2.5rem, 5vw, 4.5rem);
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.02em;
    margin-bottom: 1.5rem;
}

.hero-subtitle {
    font-size: clamp(1rem, 2vw, 1.25rem);
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.85);
    max-width: 48rem;
    margin: 0 auto;
}

.section-title {
    font-family: var(--font-heading);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    line-height: 1.2;
    letter-spacing: -0.02em;
}

/* Spacing Utilities */
.section-padding {
    padding: 10rem 0;
}

.section-padding-small {
    padding: 7.5rem 0;
}

@media (max-width: 768px) {
    .section-padding {
        padding: 4rem 0;
    }
    .section-padding-small {
        padding: 3rem 0;
    }
}

/* Navigation Styles */
#navbar {
    background: rgba(10, 14, 39, 0);
    backdrop-filter: blur(0px);
}

#navbar.scrolled {
    background: rgba(10, 14, 39, 0.95);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.1);
}

/* Buttons */
.btn-primary {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    font-size: 0.875rem;
    font-weight: 600;
    background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
    color: white;
    border-radius: 0.75rem;
    text-decoration: none;
    transition: all 0.3s var(--ease-out-quart);
    position: relative;
    overflow: hidden;
}

.btn-primary::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #60A5FA 0%, #3B82F6 100%);
    opacity: 0;
    transition: opacity 0.3s;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 24px rgba(59, 130, 246, 0.3),
                0 0 40px rgba(59, 130, 246, 0.2);
}

.btn-primary:hover::before {
    opacity: 1;
}

.btn-primary span {
    position: relative;
    z-index: 1;
}

.btn-primary-large {
    display: inline-block;
    padding: 1rem 2rem;
    font-size: 1rem;
    font-weight: 600;
    background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
    color: white;
    border-radius: 0.75rem;
    text-decoration: none;
    transition: all 0.3s var(--ease-out-quart);
}

.btn-primary-large:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 24px rgba(59, 130, 246, 0.3),
                0 0 40px rgba(59, 130, 246, 0.2);
}

.btn-primary-xl {
    display: inline-block;
    padding: 1.25rem 2.5rem;
    font-size: 1.125rem;
    font-weight: 600;
    background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
    color: white;
    border-radius: 0.875rem;
    text-decoration: none;
    transition: all 0.3s var(--ease-out-quart);
}

.btn-primary-xl:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 24px rgba(59, 130, 246, 0.4),
                0 0 60px rgba(59, 130, 246, 0.3);
}

.btn-secondary-large {
    display: inline-block;
    padding: 1rem 2rem;
    font-size: 1rem;
    font-weight: 600;
    background: transparent;
    color: white;
    border: 1.5px solid rgba(255, 255, 255, 0.2);
    border-radius: 0.75rem;
    text-decoration: none;
    backdrop-filter: blur(10px);
    transition: all 0.3s var(--ease-out-quart);
}

.btn-secondary-large:hover {
    border-color: #3B82F6;
    background: rgba(59, 130, 246, 0.1);
    transform: translateY(-2px);
}

/* Floating Gradient Orb */
.floating-gradient {
    position: absolute;
    width: 700px;
    height: 700px;
    border-radius: 50%;
    background: radial-gradient(
        circle,
        rgba(59, 130, 246, 0.25) 0%,
        rgba(139, 92, 246, 0.15) 50%,
        transparent 100%
    );
    filter: blur(120px);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation: float 12s ease-in-out infinite;
    pointer-events: none;
}

.floating-gradient-small {
    position: absolute;
    width: 500px;
    height: 500px;
    border-radius: 50%;
    background: radial-gradient(
        circle,
        rgba(59, 130, 246, 0.2) 0%,
        rgba(139, 92, 246, 0.1) 50%,
        transparent 100%
    );
    filter: blur(100px);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation: float 10s ease-in-out infinite;
    pointer-events: none;
    z-index: 0;
}

@keyframes float {
    0%, 100% {
        transform: translate(-50%, -50%) scale(1);
    }
    33% {
        transform: translate(-40%, -55%) scale(1.1);
    }
    66% {
        transform: translate(-60%, -45%) scale(0.95);
    }
}

@media (max-width: 768px) {
    .floating-gradient {
        width: 400px;
        height: 400px;
    }
    .floating-gradient-small {
        width: 300px;
        height: 300px;
    }
}

/* Scroll Indicator */
.scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    animation: bounce 2s ease-in-out infinite;
    color: rgba(255, 255, 255, 0.5);
}

@keyframes bounce {
    0%, 100% {
        transform: translateX(-50%) translateY(0);
    }
    50% {
        transform: translateX(-50%) translateY(0.5rem);
    }
}

/* Glass Card Effect */
.glass-card {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1.25rem;
    transition: all 0.4s var(--ease-out-expo);
}

.glass-card:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(59, 130, 246, 0.3);
    transform: translateY(-4px);
}

/* Service Cards */
.service-card {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1.25rem;
    padding: 2.5rem;
    transition: all 0.4s var(--ease-out-expo);
    position: relative;
    overflow: hidden;
}

.service-card::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 1.25rem;
    padding: 1px;
    background: linear-gradient(
        135deg,
        rgba(59, 130, 246, 0.3),
        rgba(139, 92, 246, 0.1)
    );
    -webkit-mask:
        linear-gradient(#fff 0 0) content-box,
        linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.4s;
}

.service-card:hover::before {
    opacity: 1;
}

.service-card:hover {
    background: rgba(255, 255, 255, 0.05);
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2),
                0 0 60px rgba(59, 130, 246, 0.15);
}

.service-icon {
    color: #3B82F6;
    margin-bottom: 1.5rem;
    filter: drop-shadow(0 4px 12px rgba(59, 130, 246, 0.4));
}

.service-title {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
}

.service-description {
    color: rgba(255, 255, 255, 0.75);
    line-height: 1.6;
    margin-bottom: 1.5rem;
}

.service-link {
    display: inline-flex;
    align-items: center;
    color: #3B82F6;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s;
}

.service-link:hover {
    gap: 0.5rem;
    text-decoration: underline;
}

/* Platform Logos */
.platform-logo {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 600;
    transition: all 0.3s;
}

.platform-logo:hover {
    opacity: 1 !important;
    transform: scale(1.05);
    color: #3B82F6;
}

/* Project Cards */
.project-card {
    transition: transform 0.3s var(--ease-out-quart);
}

.project-card:hover {
    transform: translateY(-4px);
}

.project-image {
    margin-bottom: 1.5rem;
    transition: transform 0.3s;
}

.project-card:hover .project-image {
    transform: scale(1.02);
}

.project-title {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
}

.project-tags {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
}

.tag {
    display: inline-block;
    padding: 0.375rem 0.75rem;
    font-size: 0.75rem;
    font-weight: 500;
    color: #3B82F6;
    background: rgba(59, 130, 246, 0.1);
    border-radius: 0.375rem;
    border: 1px solid rgba(59, 130, 246, 0.2);
}

.project-description {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
}

/* Fade Up Animations */
.fade-up {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s var(--ease-out-expo);
}

.fade-up.visible {
    opacity: 1;
    transform: translateY(0);
}

.fade-up.delay-100 {
    transition-delay: 0.1s;
}

.fade-up.delay-200 {
    transition-delay: 0.2s;
}

.fade-up.delay-300 {
    transition-delay: 0.3s;
}

.fade-up.delay-400 {
    transition-delay: 0.4s;
}

/* Hero Animations (will be triggered by JS) */
.hero-title,
.hero-subtitle,
#hero-ctas {
    transition: all 0.8s var(--ease-out-expo);
}

.hero-title.animate {
    opacity: 1 !important;
    transform: translateY(0) !important;
    transition-delay: 0.2s;
}

.hero-subtitle.animate {
    opacity: 1 !important;
    transform: translateY(0) !important;
    transition-delay: 0.4s;
}

#hero-ctas.animate {
    opacity: 1 !important;
    transform: translateY(0) !important;
    transition-delay: 0.6s;
}

/* Mobile Menu */
#mobile-menu {
    transition: all 0.3s var(--ease-out-quart);
}

/* Responsive Design */
@media (max-width: 768px) {
    .service-card {
        padding: 2rem;
    }

    .section-title {
        font-size: 2rem;
    }

    .hero-title {
        font-size: 2.5rem;
    }
}

/* Smooth Scroll */
@media (prefers-reduced-motion: reduce) {
    html {
        scroll-behavior: auto;
    }

    * {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
    }
}

/* Custom Scrollbar */
::-webkit-scrollbar {
    width: 10px;
}

::-webkit-scrollbar-track {
    background: var(--color-navy);
}

::-webkit-scrollbar-thumb {
    background: rgba(59, 130, 246, 0.5);
    border-radius: 5px;
}

::-webkit-scrollbar-thumb:hover {
    background: rgba(59, 130, 246, 0.7);
}

/* Selection */
::selection {
    background: rgba(59, 130, 246, 0.3);
    color: white;
}

/* Focus Styles */
a:focus,
button:focus {
    outline: 2px solid #3B82F6;
    outline-offset: 2px;
}

/* Print Styles */
@media print {
    .floating-gradient,
    .floating-gradient-small,
    #navbar,
    .scroll-indicator {
        display: none;
    }
}
