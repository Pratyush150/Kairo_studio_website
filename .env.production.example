# Production Environment Variables
# Copy this file to .env.production and fill in your production values

# Database (PostgreSQL recommended for production)
DATABASE_URL="postgresql://user:password@host:5432/kairo_studio?schema=public"

# NextAuth / Authentication
NEXTAUTH_SECRET="your-secure-random-secret-at-least-32-characters-long"
NEXTAUTH_URL="https://yourdomain.com"

# CRM Webhook (Zapier, Make, n8n, etc.)
WEBHOOK_URL="https://hooks.zapier.com/hooks/catch/your-webhook-id"

# Admin API Key (for lead retrieval)
ADMIN_API_KEY="your-secure-admin-api-key"

# Email Service (SendGrid, Resend, etc.)
SENDGRID_API_KEY="your-sendgrid-api-key"
# OR
RESEND_API_KEY="your-resend-api-key"

# Analytics (Google Analytics, Plausible, etc.)
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
# OR
NEXT_PUBLIC_PLAUSIBLE_DOMAIN="yourdomain.com"

# Error Tracking (Sentry)
SENTRY_DSN="https://your-sentry-dsn"
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_3D="true"

# Rate Limiting
RATE_LIMIT_REQUESTS="100"
RATE_LIMIT_WINDOW="15"

# CORS
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# Node Environment
NODE_ENV="production"
